<mvc:View
	controllerName="in.sijas.demo.date.utils.tour.controller.Initial"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Shell>
		<App>
			<Page
				title="{i18n>pageTile}"
				class="sapUiResponsiveContentPadding"
			>
				<content>
					<VBox>
						<HBox justifyContent="Center">
							<DateTimePicker
								width="100%"
								id="idDatePicker"
								value="{/date}"
							/>
						</HBox>
						<HBox justifyContent="Center">
							<Select
								items="{/functions}"
								class="sapUiSmallMarginEnd"
								id="idSelect"
							>
								<items>
									<core:Item
										text="{name}"
										key="{name}"
									/>
								</items>
							</Select>
							<Button
								text="{i18n>btnChange}"
								press="changeDate"
							/>
						</HBox>
					</VBox>
				</content>
			</Page>
		</App>
	</Shell>
</mvc:View>